# =================================
# APPLICATION CONFIGURATION
# =================================
APP_PORT=3000

# =================================
# DATABASE CONFIGURATION (PostgreSQL)
# =================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-password
DATABASE_NAME=nest_starter_kit

# =================================
# AUTHENTICATION CONFIGURATION
# =================================
# Generate secret dengan: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long
# Base URL aplikasi Anda
BETTER_AUTH_URL=http://localhost:3000

# =================================
# EMAIL CONFIGURATION (Nodemailer)
# =================================

# --- Option 1: Gmail (for development) ---
# 1. Enable 2FA di Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use App Password (16 characters) sebagai MAIL_PASSWORD
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=NestJS Auth

